<!-- start: Page Title -->
<div id="page-title" class="article">

  <h2><%= @post.title %></h2>

</div>
<!-- end: Page Title -->
    
<!--start: Wrapper-->
<div id="wrapper">
      
  <!--start: Row -->
  <div class="row-fluid">
  
    <div class="posts span8">

      <!-- start: Post -->
      <div class="post first last">
      
        <% if @post.show_photo_as_header and !@post.photo.file.url.blank? %>
        <div class="post-img picture">
          <%= image_tag(@post.photo.file.url(:full), class: 'image') %>
        </div>
        <%= render 'shared/photo_footer', photo: @post.photo %>
        <% end %>
        <div class="info">
          <span class="post-date">
            <span class="day"><%= @post.updated_at.day %></span>
            <span class="month"><%= I18n.localize(@post.updated_at, :format => "%B")[0,3] %></span>
          </span>
        </div>
        <div class="post-title clearfix">
          <h2><%= @post.lead %></h2>
        </div>
        <div class="post-content">
          <div class="post-meta">
            <span><i class="icon-user"></i>Por <a href="#"><%= @post.author.name %></a></span> 
          </div>
          <%= render 'shared/show_admin_links', item: @post %>
          <div class="post-description">
            <%= raw(@content) %>
          </div>
        </div>

        <%= render 'shared/social_buttons' %>

        <%= render 'shared/related_posts', related_posts: @related_posts[0..1], width: 'span6' %>

        <%= render 'shared/comments' %>
      
      </div>
      <!-- end: Post -->

    </div>  

    <%= render 'shared/show_related_entities', entities: @related_entities %>

  </div>
  <!--end: Row -->

</div>
<!-- end: Wrapper  -->

