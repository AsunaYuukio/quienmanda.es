<!--start: Wrapper-->
<div id="wrapper" class="full">       

  <!--start: Row -->
  <div class="row-fluid">

    <div class="span8 separate">

      <p>
        <strong>Title:</strong>
        <%= @post.title %>
      </p>

      <p>
        <strong>Author:</strong>
        <%= @post.author.name %>
      </p>

      <hr>

      <%= raw(@content) %>

      <hr>

      <%= link_to 'Back', posts_path %>

    </div>

  </div>

</div>