<h1>Listing photos</h1>

<table>
  <thead>
    <tr>
      <th>Footer:</th>
      <th>Thumbnail:</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @photos.each do |photo| %>
      <tr>
        <td><%= link_to photo.footer, photo %></td>
        <td><%= link_to image_tag(photo.file.url(:thumb), class: 'thumbnail'), photo %></td>
      </tr>
    <% end %>
  </tbody>
</table>
