<div class="<%= defined?(frontpage) ? 'span6' : 'span3' %> item">
  <div class="picture">
    <%= link_to image_tag(item.photo.url(defined?(frontpage) ? :full : :small)), item, class: 'image' %>
    <div class="description">
      <p>
        <%= link_to item.title, post_path(item) %>
      </p>
      <%= render 'shared/show_admin_links', :item => item %>
    </div>
  </div>  
</div>
